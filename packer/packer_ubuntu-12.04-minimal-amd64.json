{
  "description": "westurner/provis Ubuntu 12.04.4 minimal amd64 ({{ isotime }})",
  "variables": {
    "ssh_name": "ubuntu",
    "ssh_pass": "ubuntu",
    "hostname": "pvbx",
    "aptproxy": "http://apt.create.wrd.nu:23142",
    "tasksels": "ssh-server",
    "taskseld": "none"
  },
  "builders": [
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "http://provis.create.wrd.nu/isos/ubuntu/ubuntu-12.04-minimal-amd64.updates.iso",
      "iso_checksum": "9520126eb734ccbbd65beaab462ae185",
      "iso_checksum_type": "md5",
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_wait_timeout": "3000s",
      "boot_wait": "3s",
      "http_directory": "./http_directory/",
      "boot_command": [
        "<esc><wait>",
        "install noapic ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-server.preseed ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "debconf/frontend=noninteractive ",
        "hostname={{user `hostname`}} ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "tasks={{user `tasksels`}} ",
        "desktop={{user `taskseld`}} ",
        "initrd=initrd.gz -- <enter>"
      ],
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "shutdown_command": "echo '{{user `ssh_pass`}}' | sudo -S shutdown -P now",
      "disk_size": "40000",
      "format": "ovf",
      "headless": false
    },
    {
      "type": "docker",
      "image": "ubuntu",
      "export_path": "docker-image-{{user `hostname`}}.tar",
      "run_command": [
        "run", "-d", "-i", "-t", "-v",
        "{{.Volumes}}",
        "{{.Image}}",
        "/bin/bash"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/etckeeper.sh",
        "scripts/ufw.sh",
        "scripts/base.sh",
        "scripts/virtualbox.sh",
        "scripts/virtualbox-vagrant.sh",
        "scripts/cleanup.sh",
        "scripts/virtualbox-cleanup.sh"
      ],
      "execute_command": "{{.Vars}} sudo -E sh '{{.Path}}'",
      "override": {
        "virtualbox": {
          "execute_command": "echo '{{user `ssh_pass`}}' | {{.Vars}} sudo -E -S sh '{{ .Path }}'"
        }
      }
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 1,
      "keep_input_artifact": true,
      "override": {
        "vmware": {
            "compression_level": 0
        }
      },
      "only": ["virtualbox"]
    },
    {
      "type": "docker-import",
      "repository": "westurner/provis",
      "tag": "0.1.0",
      "only": ["docker"]
    },
    {
      "type": "docker-push",
      "only": ["docker"]
    }
  ]
}
